<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/timer_lay"
        android:layout_width="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:visibility="visible"
        android:background="@drawable/stopwatch"
        android:layout_height="60dp">
     <!--   <include
            layout="@layout/layout_centre_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true" />-->

        <TextView
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_next_bold"
            android:text=""
            android:paddingLeft="@dimen/ten_dp"
            android:gravity="center"
            android:paddingTop="@dimen/ten_dp"
            android:layout_gravity="right"
            android:textColor="@color/lush_lava"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/for_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_lay"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:text="@string/for_text"
        android:textColor="@color/darkBlue"
        android:textSize="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/person_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layoutDirection="rtl"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/filter_items_person" />

    <RelativeLayout
        android:id="@+id/bsContainer"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></RelativeLayout>

</LinearLayout>
