<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.hats.six.hope.fragments.ServiceItemFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradiant"
        android:paddingTop="@dimen/ten_dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_service"
            style="@style/CustomBlueButton"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/avenir_regular"
            android:text="@string/next" />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_regular"
            android:gravity="center_horizontal"
            android:text="Quikest Appointment Time"
            android:textColor="@color/lightred"
            android:textSize="16dp" />-->
    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/person_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idpersonName1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/rounded_button_green"
                android:ellipsize="end"
                android:singleLine="true"

                android:fontFamily="@font/avenir_regular"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:text=""
                android:textColor="@color/pure_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/idpersonName2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/primary_rounded_button"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:text=""
                android:singleLine="true"

                android:textColor="@color/darkBlue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/idpersonName3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/primary_rounded_button"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"

                android:textColor="@color/darkBlue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/idpersonName4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/primary_rounded_button"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center"
                android:padding="@dimen/ten_dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/darkBlue"
                android:textSize="16dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_services_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_below="@+id/person_lay"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/filter_items_trans" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/services_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_lay"
        android:layout_below="@+id/main_services_list"
        android:layout_margin="@dimen/activity_vertical_margin"
        tools:context="com.jullay.users.booking.ServiceItemFragment"
        tools:listitem="@layout/fragment_serviceitem" />

    <ProgressBar
        android:id="@+id/insidePB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/Theme.JullayBrandApp.PinkAccent"
        android:visibility="gone" />
</RelativeLayout>


