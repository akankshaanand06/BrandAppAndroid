<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    style="@style/SheetDialog"
    android:background="@drawable/gradiant"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/enter_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="30dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:fontFamily="@font/avenir_regular"
            android:hint="@string/enter_your_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/pure_white"
            android:textColorHint="@color/white"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/enter_name_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:fontFamily="@font/avenir_regular"
            android:hint="Type 2nd Person's Name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/pure_white"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/enter_name_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:fontFamily="@font/avenir_regular"
            android:hint="Type 3rd Person's Name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/pure_white"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/enter_name_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:fontFamily="@font/avenir_regular"
            android:hint="Type 4th Person's Name"
            android:inputType="textCapWords"

            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/pure_white"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done_next"
            style="@style/CustomBlueButton"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/avenir_regular"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>
