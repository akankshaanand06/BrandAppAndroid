<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SheetDialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/gradiant_vertical_rounded"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <TextView
        android:id="@+id/when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:fontFamily="@font/avenir_regular"
        android:text="@string/when_text"
        android:textColor="@color/pure_white"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/lay_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_below="@+id/when"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue"
            android:gravity="center"
            android:text="Today"
            android:textColor="@color/pure_white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tomorrow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center"
            android:text="@string/tomorrow"
            android:textColor="@color/pure_white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/third_day"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center"
            android:text="20th Sept."
            android:textColor="@color/pure_white"
            android:textSize="12dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_today"
        android:layout_centerHorizontal="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phase_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/select_day_phase_item" />

        <TimePicker
            android:id="@+id/prebooktimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />
<!--
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/prebook_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_today"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layoutDirection="rtl"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/filter_items_dura" />-->

    </FrameLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkqat"
        style="@style/CustomBlueButton"
        android:layout_below="@+id/list_lay"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/avenir_regular"
        android:text="@string/next" />
</RelativeLayout>
