<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:elevation="8dp"
        card_view:cardBackgroundColor="@color/pure_white"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="@dimen/activity_horizontal_margin"
        tools:context=".AboutUsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/staffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camp_img"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="center"
                android:text="Staff name"
                android:textColor="@color/accent"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/long_des_serv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/staffName"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="16dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="TextView"
                android:textColor="@color/black_light" />

            <LinearLayout
                android:id="@+id/butns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/long_des_serv"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/staff_rating"
                        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_weight="2"
                        android:numStars="5"
                        android:progressTint="@color/teal_200"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center"
                        android:paddingTop="@dimen/ten_dp"
                        android:text="@string/ratings" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appts_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/avenir_next_bold"
                        android:gravity="center"
                        android:text="51+"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center"
                        android:paddingTop="@dimen/ten_dp"
                        android:text="@string/appointments" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/butns2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butns"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/rupee"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="center"
                    android:text="@string/reviews" />

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_menu_camera"
                    android:drawablePadding="@dimen/ten_dp"
                    android:gravity="center"
                    android:text="@string/feedbacks" />

            </LinearLayout>


            <TextView
                android:id="@+id/ser_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butns2"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="center"
                android:text="@string/services"
                android:textColor="@color/black_light"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/service_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ser_heading"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="16dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="TextView"
                android:textColor="@color/black_light" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/staff_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="@null"
        android:src="@drawable/dummy_user" />



</FrameLayout>