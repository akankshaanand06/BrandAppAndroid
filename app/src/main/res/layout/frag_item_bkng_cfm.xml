<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.six.hats.users.fragments.BookingConfirmPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_diagonal">


     <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="25dp"
        android:layout_above="@+id/confrm_booking"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
         android:layout_alignParentTop="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context="com.jullay.users.booking.BookingConfirmPage"
        tools:listitem="@layout/final_qat_items" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confrm_booking"
        style="@style/CustomBlueButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/avenir_regular"
        android:text="@string/confirm_q_a_ts" />

    <ProgressBar
        android:id="@+id/insidePB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/Theme.JullayBrandApp.PinkAccent"
        android:visibility="gone" />

</RelativeLayout>